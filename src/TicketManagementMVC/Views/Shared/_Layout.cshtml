@using System.Globalization;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/content/css")
    @Scripts.Render("~/bundles/mainJs")
</head>
<body>
    <div>
        <div class="container min-width1140" id="menu">
            @Html.Partial("~/Views/Home/Partial/_Menu.cshtml")
            <hr />
        </div>
    </div>
    <div class="container body-content min-width1140">
        @RenderBody()
    </div>
    <div class="container">
        <hr />
        <footer>
            <div class="float-left"><p>&copy; .NET-int Autumn 2018</p></div>
            <div class="float-right pr-2 d-inline-block">
                <div class="d-inline-block mr-2">@ProjectResources.AccountResource.SelectLanguage</div>
                <div class="d-inline-block">
                    @Html.DropDownList("footerCulture", new SelectList(Enum.GetValues(typeof(Cultures)).Cast<Cultures>().
                          Select(x=>new { text = Html.GetEnumDescription(x), id = x}).ToList(),
                          "id",
                          "text",
                          CultureInfo.CurrentCulture.TwoLetterISOLanguageName),
                      new { @class = "",
                          autocomplete = "off",
                          onchange = "SetCultureFromFooter()"
                      })
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/otherJs")
</body>
</html>