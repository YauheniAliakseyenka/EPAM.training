@{
    ViewBag.Title = EventResource.Edit;
}

<div id="eventPlaceHolder">
    <h2 class="text-center">@EventResource.Edit</h2>
    <div class="form-group col-sm-10 offset-sm-1">
        <label>@EventResource.EventSelectVenueDropDownLabel</label>
        @Html.DropDownList("venue", new SelectList(ViewBag.VenueList, "Id", "NameWithOffset", "0"),
       new { @class = "form-control", onchange = "GetEventsByVenue();", @id = "venueListToSortEvents" })
    </div>

    <div class="form-group col-sm-10 offset-sm-1">
        <label>@EventResource.EditEventSelectDropDown</label>
        <select class="form-control required" id="eventListOnEdit" onchange="GetEventToEdit()"></select>
    </div>
    <div class="short-devider"></div>
    <div id="editEventPlaceHolder">
    </div>
</div>

<script type="text/javascript">
    $(window).ready(function () {
        $('#venueListToSortEvents').trigger("change");
    });
</script>

<div id="editAreaPlaceHolder">
</div>