@model TicketManagementMVC.Models.BalanceReplenishmentViewModel
@{
    ViewBag.Title = AccountResource.BalanceReplenishment;
}
<h2 class="text-center  title mb-3">@AccountResource.BalanceReplenishment</h2>
<br />
<div class="row">
    @using (Html.BeginForm("BalanceReplenishment", "Account", FormMethod.Post, new { @class = "d-table m-auto",
        @id = "balanceReplenishment-form"
    }))
    {
        <div class="recharge-form">
            @Html.AntiForgeryToken()
            <div id="errorMessagesBalanceReplenishment" class=" text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(x => x.Amount)
                <div class="" style="width:300px;">@Html.TextBoxFor(x => x.Amount, null, new { @class = "form-control" }) </div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary register-button" style="width:225px;" onclick="BalanceReplenishment()">@CommonResource.Add</button>
                <button type="button" class="btn btn-primary back-button" style="width:75px;" onclick="location.href='@Url.Action("Index", "Home")'">@CommonResource.Back</button>
            </div>
        </div>
    }
</div>


