@model TicketManagementMVC.Models.BalanceReplenishmentViewModel
@{
    ViewBag.Title = Resource.BalanceReplenishmentTitle;
}
<h2 class="text-center  title mb-3">@Resource.BalanceReplenishmentTitle</h2>
<br />
<div class="row">
    @using (Html.BeginForm("BalanceReplenishment", "Account", FormMethod.Post, new { @class = "d-table m-auto" }))
    {
        <div class="recharge-form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(x => x.Amount), USD
                <div class="" style="width:300px;">@Html.TextBoxFor(x => x.Amount, null, new { @class = "form-control" }) </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary register-button" style="width:225px;">@Resource.AddButton</button>
                <button type="button" class="btn btn-primary back-button" style="width:75px;" onclick="location.href='@Url.Action("Index", "Home")'">@Resource.BackButton</button>
            </div>
        </div>
    }
</div>


